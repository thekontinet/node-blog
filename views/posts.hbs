<h1 class="bg-dark p-5 text-white">Posts</h1>
{{> alert}}
<div class="container-fluid px-5">
    <section>
    <h3 class="my-5">Recent Posts</h3>
    {{#each posts}}
    <article class="card mb-4" style="max-width: 500px;">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>{{content}}</p>
            <a href="#">Like</a>
            <a href="#">Comment</a>
        </div>
    </article>
    {{/each}}

    
</section>
</div>